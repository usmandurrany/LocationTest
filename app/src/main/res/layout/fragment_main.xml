<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.fournodes.ud.locationtest.MainActivity"
    android:id="@+id/root">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:textSize="12sp"

        android:id="@+id/btnService"
        android:layout_alignTop="@+id/btnSetUpdateInterval"
        android:layout_toRightOf="@+id/btnSetUpdateInterval"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:textSize="12sp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/btnSetUpdateInterval"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Long: "
        android:id="@+id/txtLong"
        android:layout_below="@+id/btnSetUpdateServer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lat: "
        android:id="@+id/txtLat"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLong"
        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Last Updated: "
        android:id="@+id/txtLastUpdated"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLat"
        android:layout_alignParentLeft="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:textSize="12sp"

        android:id="@+id/btnSetDisplacement"
        android:layout_below="@+id/btnSetUpdateInterval"
        android:layout_alignLeft="@+id/btnSetUpdateInterval"
        android:layout_alignStart="@+id/btnSetUpdateInterval" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:textSize="12sp"

        android:id="@+id/btnSetUpdateServer"
        android:layout_below="@+id/btnSetDisplacement"
        android:layout_alignLeft="@+id/btnSetDisplacement"
        android:layout_alignStart="@+id/btnSetDisplacement" />
    <android.support.v7.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Polling"
        android:id="@+id/chkPolling"
        android:textSize="12sp"
        android:layout_alignTop="@+id/btnSetDisplacement"
        android:layout_alignLeft="@+id/btnService"
        android:layout_alignStart="@+id/btnService"
        android:layout_alignRight="@+id/btnFence"
        android:layout_alignEnd="@+id/btnFence" />


<android.support.design.widget.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_toLeftOf="@+id/btnSetUpdateInterval"
    android:layout_toStartOf="@+id/btnSetUpdateInterval"
    android:layout_alignBottom="@+id/btnSetUpdateInterval" >
    <android.support.design.widget.TextInputEditText
        style="?android:attr/textAppearanceSmall"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:hint="Update Interval"
        android:id="@+id/edtUpdateInterval"
        />
</android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnSetDisplacement"
        android:layout_toStartOf="@+id/btnSetDisplacement"
        android:layout_alignBottom="@+id/btnSetDisplacement" >
    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtDisplacement"
        android:hint="Displacement"
        style="?android:attr/textAppearanceSmall"
      />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnSetUpdateServer"
        android:layout_toStartOf="@+id/btnSetUpdateServer"
        android:layout_alignBottom="@+id/btnSetUpdateServer" >
    <android.support.design.widget.TextInputEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtUpdateServer"
        android:hint="Server Update Interval"
        style="?android:attr/textAppearanceSmall"
       />
</android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatCheckBox
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active Mode"
        android:id="@+id/chkActiveMode"
        android:layout_below="@+id/chkPolling"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnSetDisplacement"
        android:layout_toEndOf="@+id/btnSetDisplacement" />

    <android.support.v7.widget.AppCompatCheckBox
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send To Server"
        android:id="@+id/chkUpdateServer"
        android:layout_below="@+id/chkActiveMode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnSetDisplacement"
        android:layout_toEndOf="@+id/btnSetDisplacement" />


</RelativeLayout>
